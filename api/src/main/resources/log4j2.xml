<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="contributors-api">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %marker %m %X %ex %n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Resources (REST) -->
        <Logger name="com.newrelic.contributors.api.ContributorsResource" level="trace" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- Default logger -->
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
